<form class="form" id="account_email" method="POST" action="">
    <fieldset class="form-fieldset grid grid-col-2">
        {% Checkbox id="account_email_Newsletter", label="Quicket newsletter" %}
        {% Checkbox id="account_email_Event", label="Event recommendations" %}
        {% Checkbox id="account_email_Invitations", label="Invitations from event organisers" %}
        {% Checkbox id="account_email_Sales", label="Daily sales updates on your events" %}
