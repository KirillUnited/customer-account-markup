<footer class="footer">
    <div class="container">
        <div class="footer-inner">
            <img src="/assets/images/icons/logo.svg" class="logo hidden-less-sm" width="169" height="48"
                 alt="Quicket"/>
            <h3>Ready to create an event?</h3>
            {% Button children="Get Started", state="secondary", type="button" %}
            <div class="footer-menu">
                {%- for key, value in footer.menu -%}
                    <ul>
                        <p class="h1">{{ value.title }}</p>
                        {%- for item in value.list -%}
                            <li>
                                <a href="{{ item.link }}">{{ item.title }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                {% endfor %}
            </div>
        </div>
    </div>
</footer>
<footer class="footer footer-bottom">
    <div class="container">
        <div class="footer-inner">
            <ul>
                <li>
                    <a href="tel:{{ contacts.tel }}">{{ contacts.tel }}</a>
                </li>
                <li>
                    <a href="mailto:{{ contacts.email }}">{{ contacts.email }}</a>
                </li>
            </ul>
            <ul>
                {%- for key, value in contacts.socials -%}
                    <li>
                        <a href="{{ value.link }}">
                            <img src="/assets/images/icons/{{ value.icon }}" alt="{{ key }}"/>
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</footer>
